datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model CountdownAnswer {
  id         Int      @id @default(autoincrement())
  shop       String?
  email      String?
  answer     String
  deviceType String?
  discountCode String?
  createdAt  DateTime @default(now())
}

model CountdownSetting {
  id        Int      @id @default(autoincrement())
  shop      String   @unique
  endDate   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WheelSetting {
  id      String   @id @default(cuid())
  shop    String   @unique

  segment1 Json
  segment2 Json
  segment3 Json
  segment4 Json
  segment5 Json
  segment6 Json
}

model UserEvent {
  id            Int      @id @default(autoincrement())
  shop          String
  email         String?
  eventType     String
  url           String
  productHandle String?
  deviceType    String?
  eventData     Json?
  createdAt     DateTime @default(now())
}


model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model TenantDatabase {
  id          Int     @id @default(autoincrement())
  shop        String  @unique
  databaseUrl String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
